---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import { Image } from "astro:assets";
import portrait from "@assets/images/vtsakalos_round.png";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
---

<Layout title={`${SITE.title} | About`}>
  <Header activeNav="about" />
  <Main pageTitle="About">
    <section id="about" class="prose max-w-full">
      <Image class="portrait" src={portrait} alt="Georgios Piskas" />
      <h3>I am a...</h3>
      <p>
        <span class="highlight">
          Tech Lead. AI Architect. Data Architect.
        </span>
      </p>
      <p>
        <span class="highlight">
          Pattern Decipherer. Data Sculptor. Insight Extractor. Bias Buster.
        </span>
      </p>
      <p>Statistical thinker. Head scratcher. Book reader. Goal setter.</p>    
      <p>Trail runner. Bicycle rider. Ocean swimmer. Goal achiever.</p>  
      <!-- 
      <p class="last">
        <span class="highlight">Dreamer. Planner. Doer.</span>
      </p>
      --!>
      <Hr />
      <h3>Details</h3>
      <p>
        Visit my <LinkButton
          href="https://www.linkedin.com/in/vasileiostsakalos/"
          title="Vasileios Tsakalos on LinkedIn"
          ariaLabel="Vasileios Tsakalos on LinkedIn"
          newTab>LinkedIn Profile</LinkButton
        > for more details.
      </p>
      <p>
        Reach out at <LinkButton
          href="mailto:vtsakalos@proton.me"
          title="Send an email to Vasileios Tsakalos"
          ariaLabel="Send an email to Vasileios Tsakalos"
          >vtsakalos@proton.me</LinkButton
        > for business inquiries.
      </p>
      <Hr />
      <h3>Support</h3>
      <p>
        If you would like to support my work please consider one of the
        following options:
      </p>
      <ul>
        <li>
          <LinkButton
            href="https://github.com/sponsors/VasTsak"
            title="Support Vasileios Tsakalos via Github"
            disabled
            >Github Sponsors (coming soon)
          </LinkButton>
        </li>
        <li>
          <LinkButton
            href="https://buy.stripe.com/28obMAdue2or07udQR"
            title="Support Vasileios Tsakalos via Stripe (monthly subscription)"
            >Stripe (monthly subscription)
          </LinkButton>
        </li>
        <li>
          <LinkButton
            href="https://donate.stripe.com/9AQcQE61M6EHcUg9AA"
            title="Support Vasileios Tsakalos via Stripe (one-time donation)"
            >Stripe (one-time donation)
          </LinkButton>
        </li>
        <li>
          <LinkButton
            href="paypal.me/vtsakalos"
            title="Support Vasileios Tsakalos via PayPal (one-time donation)"
            >PayPal (one-time donation)
          </LinkButton>
        </li>
        <li>
          <LinkButton
            href="https://ko-fi.com/gpiskas"
            title="Support Vasileios Tsakalos via Ko-Fi"
            >Buy me a coffee (subscription or donation)
          </LinkButton>
        </li>
      </ul>
    </section>
  </Main>
  <Footer />

  <style>
    #about p {
      @apply m-2;
    }
    .last {
      @apply text-right text-xl;
    }
    .portrait {
      @apply float-none h-40 w-40 rounded-full object-cover sm:float-right;
    }
  </style>
</Layout>
